{
  "compilerOptions": {
    "target": "es2023",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "ignoreDeprecations": "6.0",
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "types": [
      "jest",
      "node"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "outDir": "./dist"
  },
  "include": ["src/**/*", "__tests__/**/*", "**/*.test.ts"],
  "exclude": ["node_modules"]
}
